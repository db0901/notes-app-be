{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "helpers/*": ["helpers/*"],
      "middleware/*": ["middleware/*"],
      "routes/*": ["routes/*"],
      "schemas/*": ["schemas/*"]
    },
    "typeRoots": ["./types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
